<%= form_with(model: @book, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <%= f.hidden_field :student_id, value: @student.id %>

  <%= f.submit "Create book", class: "btn btn-block btn-outline-secondary" %>
<% end %>
